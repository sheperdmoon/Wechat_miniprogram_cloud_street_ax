.page {
  height: 100vh;
}
.page map .cv1 {
  position: fixed;
  bottom: 0;
  left: 0;
}
.page map .cv1 button {
  display: flex;
  border: 3rpx solid black;
  border-radius: 40rpx;
  color: #1dc1f8;
  align-items: center;
  justify-content: center;
}
